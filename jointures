mysql> SELECT wizard.firstname, wizard.lastname 
    -> FROM wizard 
    -> INNER JOIN player ON wizard.id=player.wizard_id 
    -> WHERE player.role='seeker' 
    -> ORDER BY wizard.lastname, wizard.firstname;
