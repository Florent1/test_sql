mysql> SELECT wizard.firstname, wizard.lastname, player.role, team.name FROM wizard INNER JOIN player ON wizard.id=player.wizard_id INNER JOIN team ON team.id=player.team_id ORDER BY team.name, player.role, wizard.lastname, wizard.firstname;
